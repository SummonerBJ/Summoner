<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
    ></button>
    <view>
      <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
    </view>
  </view>



  <view class="activities">
    <view class="activities_list" wx:for="{{activities}}" wx:for-item="item"> 
      <view class="activities_image">
        <image bindtap="toDetail" data-index="{{index}}" mode="aspectFill" src="{{item.field}}" ></image>
      </view>
      <view class="activities_text">{{item.image_name}}</view>
    </view>
  </view> 
</view>
