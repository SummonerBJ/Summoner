<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
    ></button>
    <view>
      <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
    </view>
  </view>



  <view class="activities">
    <view class="activities_list" wx:for="{{activities}}" wx:for-item="item"> 
      <view class="activities_image">
        <image bindtap='toDetail'  mode="{{item.mode}}" src="{{item.src}}" ></image>
      </view>
      <view class="activities_text">{{item.text}}</view>
    </view>
  </view> 
</view>
